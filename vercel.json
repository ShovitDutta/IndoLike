{
  "version": 2,
  "devCommand": "npm run dev",
  "buildCommand": "npm run build",
  "installCommand": "npm run install",
  "rewrites": [
    { "source": "/(.*)", "destination": "/index.js" },
    { "source": "/api/(.*)", "destination": "/index.js" },
    { "source": "/quotegen/(.*)", "destination": "/projects/QuoteGen/$1" },
    { "source": "/geminichat/(.*)", "destination": "/projects/GeminiChat/$1" },
    { "source": "/audiosphere/(.*)", "destination": "/projects/AudioSphere/$1" }
  ],
  "headers": [{ "source": "/(.*)", "headers": [{ "key": "Cache-Control", "value": "public, max-age=0, must-revalidate" }] }],
  "builds": [
    { "src": "index.js", "use": "@vercel/node" },
    { "src": "projects/QuoteGen/package.json", "use": "@vercel/next" },
    { "src": "projects/GeminiChat/package.json", "use": "@vercel/next" },
    { "src": "projects/AudioSphere/package.json", "use": "@vercel/next" }
  ]
}
