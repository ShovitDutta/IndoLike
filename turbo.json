{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env*", "**/.env.local"],
  "tasks": {
    "start": { "dependsOn": ["^start"], "cache": false, "persistent": true },
    "dev": { "cache": false, "persistent": true, "dependsOn": ["^build"], "inputs": ["src/**", "public/**"] },
    "build": { "dependsOn": ["^build"], "inputs": ["src/**", "public/**"], "outputs": [".next/**", "dist/**", "build/**"] }
  }
}
